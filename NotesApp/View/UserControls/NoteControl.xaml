<UserControl x:Class="NotesApp.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel Margin="20">
        <TextBlock x:Name="titleTextblock" Text="Note title" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="createdTextblock" Text="created Time" FontSize="12" Margin="0 10 0 0" Foreground="DarkGray"/>
        <TextBlock x:Name="updatedTextblock" Text="updated Time" FontSize="13" Foreground="DodgerBlue" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
